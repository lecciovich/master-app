<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- PROJECT -->
        <!-- Form View Of project Information -->
        <record id="view_gestcal_project_form" model="ir.ui.view">
            <field name="name">gestcal.project.form</field>
            <field name="model">gestcal.project</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                       
                         <button name="attachment_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-paperclip" 
                            context="{'xml_id':'action_gestcal_attachment_view'}">
                            <field string="Attachment" name="attachment_count" widget="statinfo" options="{'label_field': 'label_tasks'}"/>
						</button>
		           </div>
                    
                 <label for="title" class="oe_edit_only"/>
                <h1>
                 <field name="title"/>
               	</h1>
                        <group col="4" colspan="4"> 
                            <field name="project_code"/>
                            <field name="found"/>
                            <field name="financing_amount"/>
                            <field name="total_lesson_hours" />
                        </group>
                      <group col="4" colspan="4"> 
                            <field name="call"/>
                            <field name="submission"/>
                            <field name="admittance"/>
                            <field name="agreement" />
                        </group>
                        
                          <group col="4" colspan="4"> 
                            <field name="account_request"/>
                            <field name="partner"/>
                            <field name="deadline"/>
                            <field name="courses" />
                           <!--  <field name="attachments"/> -->
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View Of project Information -->
        <record id="view_gestcal_project_tree" model="ir.ui.view">
            <field name="name">gestcal.project.tree</field>
            <field name="model">gestcal.project</field>
            <field name="arch" type="xml">
                <tree string="Project">
                   <field name="title"/>
                          <field name="project_code"/>
                            <field name="found"/>
                            <field name="financing_amount"/>
                            <field name="total_lesson_hours" />
                </tree>
            </field>
        </record>
 
        <!-- Actions Of Form & Tree Views Of project Information -->
        <record id="action_gestcal_project_view" model="ir.actions.act_window">
            <field name="name">Project</field>
            <field name="res_model">gestcal.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


<!-- LESSON -->
        <!-- Form View Of  lesson Information -->
        <record id="view_gestcal_lesson_form" model="ir.ui.view">
            <field name="name">gestcal.lesson.form</field>
            <field name="model">gestcal.lesson</field>
            <field name="arch" type="xml">
                <form string="Lesson">
                    <sheet>
                        <group>
                        
                           <group>
                            <field name="title"/>
                            <field name="project_id" />
                            <field name="date"/>
		                    </group>
		                        <group>
		                           <field name="start_time" />
		                            <field name="end_time" /> 
		                            <field name="teacher_id" />
		                            <field name="course_id" />
		                         </group>     
                        </group>
                        <group>
                          <field name="beneficiaries_id" >
								<tree string="Lesson" editable="bottom">
              						  <field name="name" />
              						  <field name="street" />
              						  <field name="company_type" /> 
           						 </tree>
           					 </field>
                      </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View Of lesson Information -->
        <record id="view_gestcal_lesson_tree" model="ir.ui.view">
            <field name="name">gestcal.lesson.tree</field>
            <field name="model">gestcal.lesson</field>
            <field name="arch" type="xml">
                <tree string="Lesson">
             			    <field name="title"/>
                            <field name="date"/>
                            <field name="start_time" widget='float_time'/>
                            <field name="end_time" widget='float_time'/> 
                            <field name="teacher_id" />
                </tree>
            </field>
        </record>
 
        <!-- Actions Of Form & Tree Views Of lesson Information -->
        <record id="action_gestcal_lesson_view" model="ir.actions.act_window">
            <field name="name">Lesson</field>
            <field name="res_model">gestcal.lesson</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

<!-- PLACE -->  
<!-- Form View Of  place Information -->  
     <record id="view_gestcal_place_form" model="ir.ui.view">
            <field name="name">gestcal.place.form</field>
            <field name="model">gestcal.place</field>
            <field name="arch" type="xml">
                <form string="Lesson Place">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name"/>
                            <field name="adress"/>
                            <field name="seats"/> 
                            <field name="referent" />
                        <field name="equipment">
 							<tree editable="bottom">
								<field name="number" />  
								<field name="name"/>  
							</tree>
						</field>
                        </group>
                      
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View Of lesson Information -->
        <record id="view_gestcal_place_tree" model="ir.ui.view">
            <field name="name">gestcal.place.tree</field>
            <field name="model">gestcal.place</field>
            <field name="arch" type="xml">
                <tree string="Lesson place">
                            <field name="name"/>
                            <field name="adress"/>
                            <field name="seats"/> 
                            <field name="referent" />
                </tree>
            </field>
        </record>
 
        <!-- Actions Of Form & Tree Views Of place Information -->
        <record id="action_gestcal_place_view" model="ir.actions.act_window">
            <field name="name">Place</field>
            <field name="res_model">gestcal.place</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>     
        
        
        
<!-- COURSE -->  
<!-- Form View Of  place Information -->  
     <record id="view_gestcal_course_form" model="ir.ui.view">
            <field name="name">gestcal.course.form</field>
            <field name="model">gestcal.course</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <sheet>
                 <div class="oe_button_box" name="button_box">
                       
                         <button name="attachment_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-paperclip" 
                            context="{'xml_id':'action_gestcal_attachment_view'}">
                            <field string="Attachment" name="attachment_count" widget="statinfo" options="{'label_field': 'label_tasks'}"/>
						</button>
		           </div>
                        <group col="4" colspan="4">
                 
							<field name="name" />
							<field name="repetition" />
							<field name="total_hours" />
							<field name="topics" />
							<field name="lesson_id" >
								<tree string="Lesson" editable="bottom">
              						  <field name="title" />
              						  <field name="date" />
              						  <field name="start_time" />
              						  <field name="end_time" />
           						 </tree>
						 	</field>
                        </group>
                      
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View Of course Information -->
        <record id="view_gestcal_course_tree" model="ir.ui.view">
            <field name="name">gestcal.course.tree</field>
            <field name="model">gestcal.course</field>
            <field name="arch" type="xml">
                <tree string="Lesson place">
                            <field name="name" />
							<field name="repetition" />
							<field name="total_hours" />
							<field name="topics" />
							<field name="lesson_id" />
                </tree>
            </field>
        </record>
 
        <!-- Actions Of Form & Tree Views Of course Information -->
        <record id="action_gestcal_course_view" model="ir.actions.act_window">
            <field name="name">Course</field>
            <field name="res_model">gestcal.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>             

<!-- ATTACHMENT -->  
<!-- Form View Of attachment Information -->  
     <record id="view_gestcal_attachment_form" model="ir.ui.view">
            <field name="name">gestcal.attachment.form</field>
            <field name="model">gestcal.attachment</field>
            <field name="arch" type="xml">
                <form string="Attachment">
                    <sheet>
                        <group col="4" colspan="4">
                 
							<field name="name" />
							<field name="description" />
							<field name="validity" />
							<field name="type" />
							<field name="attachment_ids" widget="many2many_binary" string="Attach a file"/>
						 
                        </group>
                      
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View Of attachment Information -->
        <record id="view_gestcal_attachment_tree" model="ir.ui.view">
            <field name="name">gestcal.attachment.tree</field>
            <field name="model">gestcal.attachment</field>
            <field name="arch" type="xml">
                <tree string="Attachment">
                       		<field name="name" />
							<field name="description" />
							<field name="validity" />
							<field name="type" />
                </tree>
            </field>
        </record>
 
        <!-- Actions Of Form & Tree Views Of attachment Information -->
        <record id="action_gestcal_attachment_view" model="ir.actions.act_window">
            <field name="name">Attachment</field>
            <field name="res_model">gestcal.attachment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>         
        <!-- Menu items -->
        <menuitem id="menu_gestcal_root" name="Gest Call" sequence="1"/>
        <menuitem id="menu_gestcal_project" name="Project" parent="menu_gestcal_root" action="action_gestcal_project_view" sequence="1"/>
        <menuitem id="menu_gestcal_course" name="Course" parent="menu_gestcal_root" action="action_gestcal_course_view" sequence="2"/>
        <menuitem id="menu_gestcal_lesson" name="Lesson" parent="menu_gestcal_root" action="action_gestcal_lesson_view" sequence="3"/>
        <menuitem id="menu_gestcal_place" name="Place" parent="menu_gestcal_root" action="action_gestcal_place_view" sequence="4"/>
         <menuitem id="menu_gestcal_attachment" name="Attachment" parent="menu_gestcal_root" action="action_gestcal_attachment_view" sequence="5"/>
</odoo>
