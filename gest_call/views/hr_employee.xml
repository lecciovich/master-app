<!--                        required="1" -->
<!--                        <field name="topics" attrs="{'invisible':[('is_teacher', '=', False)], 'required':[('is_teacher','=', True)]}" />-->
                        <field name="topics" position="attribute" attrs="{'invisible':[('is_teacher','=',False)]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
